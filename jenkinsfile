pipeline {
    agent any

    environment {
        IMAGE_NAME = 'my-flask-app'
        IMAGE_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${env.IMAGE_NAME}:${env.IMAGE_TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh "docker run -d -p 5000:5000 --name flask-app ${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                }
            }
        }
    }
}
